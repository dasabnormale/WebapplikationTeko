{
  "openapi": "3.0.3",
  "info": { "title": "Routes API", "version": "1.0.0" },
  "servers": [{ "url": "http://localhost:3000" }],
  "paths": {
    "/api/routes": {
      "get": {
        "summary": "List routes",
        "tags": ["routes"],
        "operationId": "listRoutes",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Route" } }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create route",
        "tags": ["routes"],
        "operationId": "createRoute",
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/NewRoute" } } }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Route" } } }
          },
          "400": {
            "description": "Validation errors",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Errors" } } }
          }
        }
      }
    },
    "/api/routes/{id}": {
      "get": {
        "summary": "Get route by id",
        "tags": ["routes"],
        "operationId": "getRouteById",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "200": {
            "description": "OK",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Route" } } }
          },
          "400": {
            "description": "Invalid id",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } }
          },
          "404": { "description": "Not Found" }
        }
      },
      "delete": {
        "summary": "Delete route",
        "tags": ["routes"],
        "operationId": "deleteRoute",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": {
          "204": { "description": "No Content" },
          "400": {
            "description": "Invalid id",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } }
          },
          "404": { "description": "Not Found" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Route": {
        "type": "object",
        "required": ["id", "startLabel", "startLon", "startLat", "endLabel", "endLon", "endLat", "createdAt"],
        "properties": {
          "id": { "type": "integer" },
          "startLabel": { "type": "string" },
          "startLon": { "type": "number" },
          "startLat": { "type": "number" },
          "endLabel": { "type": "string" },
          "endLon": { "type": "number" },
          "endLat": { "type": "number" },
          "distanceMeters": { "type": "integer", "nullable": true },
          "durationSeconds": { "type": "integer", "nullable": true },
          "stepsJson": { "type": "string", "nullable": true },
          "createdAt": { "type": "string", "format": "date-time" }
        },
        "example": {
          "id": 1,
          "startLabel": "Zürich, Schweiz",
          "startLon": 8.54,
          "startLat": 47.37,
          "endLabel": "Bern, Schweiz",
          "endLon": 7.45,
          "endLat": 46.95,
          "distanceMeters": 121000,
          "durationSeconds": 4800,
          "stepsJson": "[{\"instruction\":\"Head north\"}]",
          "createdAt": "2025-09-01T12:34:56.000Z"
        }
      },
      "NewRoute": {
        "type": "object",
        "required": ["startLabel", "startLon", "startLat", "endLabel", "endLon", "endLat"],
        "properties": {
          "startLabel": { "type": "string" },
          "startLon": { "type": "number" },
          "startLat": { "type": "number" },
          "endLabel": { "type": "string" },
          "endLon": { "type": "number" },
          "endLat": { "type": "number" },
          "distanceMeters": { "type": "integer" },
          "durationSeconds": { "type": "integer" },
          "stepsJson": { "type": "string" }
        },
        "example": {
          "startLabel": "Zürich, Schweiz",
          "startLon": 8.54,
          "startLat": 47.37,
          "endLabel": "Bern, Schweiz",
          "endLon": 7.45,
          "endLat": 46.95,
          "distanceMeters": 121000,
          "durationSeconds": 4800,
          "stepsJson": "[{\"instruction\":\"Head north\"}]"
        }
      },
      "Error": {
        "type": "object",
        "properties": { "error": { "type": "string" } },
        "example": { "error": "invalid id" }
      },
      "Errors": {
        "type": "object",
        "properties": { "errors": { "type": "array", "items": { "type": "string" } } },
        "example": { "errors": ["startLabel required", "startLon number required"] }
      }
    }
  }
}
